@inject HttpClient _client
@using FoodDelivery2.Client.Components

<EditForm Model="@faq" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">

        <div class="form-group">
            <label>Question: </label>
            <div>
                <InputText @bind-Value="faq.Qns" class="form-control" />
                <ValidationMessage For="@(()=> faq.Qns)" />
            </div>
        </div>

        <div class="form-group">
            <label>Answers: </label>
            <div>
                <InputText @bind-Value="faq.Ans" class="form-control" />
                <ValidationMessage For="@(()=> faq.Ans)" />
            </div>
        </div>

        

    </fieldset>

    @if (!Disabled)
    {

        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>

    }
    <BackToList Target="faqs" />
</EditForm>

@code {

    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public FAQ? faq { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }


}